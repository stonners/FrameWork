{% extends 'layout.html.twig' %}

{% block content %}
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
            {% for i in 1..2 %}
                <div class="item {{ i is same as(1) ? 'active' }}">
                    <img src="img/slides/slide-{{ i }}.jpg" alt="Slide {{ i }}">
                </div>
            {% endfor %}
        </div>

        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Précédent</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </div>

    <hr/>

    <div class="row">
        <div class="col-lg-12">
            <h3>Les nouveautés</h3>
        </div>
    </div>

    <div class="row text-center">
        {% for i in 1..4 %}
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="{{ asset('img/products/shoe-'~ i ~'.jpg') }}" alt="nom du produit">
                    <div class="caption">
                        <h3>Nom du produit</h3>
                        <p>Une description courte du produit sera affichée à cet endroit.</p>
                        <p>
                            <span class="badge">120,00 €</span>
                            <a href="{{ asset('/store/product/'~i) }}" class="btn btn-default">Voir la fiche</a>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>

    <hr/>

    <div class="row">
        <div class="col-lg-12">
            <h3>Les plus populaires</h3>
        </div>
    </div>

    <div class="row text-center">
        {% for i in 5..8 %}
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="{{ asset('img/products/shoe-'~ i ~'.jpg') }}" alt="nom du produit">
                    <div class="caption">
                        <h3>Nom du produit</h3>
                        <p>Une description courte du produit sera affichée à cet endroit.</p>
                        <p>
                            <span class="badge">120,00 €</span>
                            <a href="{{ asset('/store/product/'~i) }}" class="btn btn-default">Voir la fiche</a>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <hr/>

{% endblock %}
{% block javascripts %}<!-- jQuery -->
    <script src="../public/js/jquery.js"></script>
<!-- Bootstrap Core JavaScript -->
    <script src="../public/js/bootstrap.min.js"></script>
{% endblock %}